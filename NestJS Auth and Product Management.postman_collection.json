				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var res = pm.response.json();\r",
									"\r",
									"if(res.user.role == 'user')\r",
									"    pm.environment.set(\"user_token\", res.token);\r",
									"    pm.collectionVariables.set(\"user_token\", res.token);\r",
									"\r",
									"if(res.user.role == 'admin')\r",
									"    pm.environment.set(\"admin_token\", res.token);\r",
									"    pm.collectionVariables.set(\"admin_token\", res.token);\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"login"
							]
						}
					},
					"response": []
				}
